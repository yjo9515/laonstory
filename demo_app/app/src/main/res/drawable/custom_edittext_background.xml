<!-- res/drawable/custom_edittext_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 모서리 반경 설정 -->
    <corners android:radius="10dp" />

    <!-- 테두리 색상과 두께 설정 -->
    <stroke
        android:width="1dp"
        android:color="#ddd" /> <!-- 원하는 테두리 색상으로 변경 -->

    <!-- 배경색 설정 -->
    <solid android:color="#FFFFFF" /> <!-- 원하는 배경색으로 변경 -->

    <!-- 패딩 설정 (선택 사항) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
